            .owl-stage{style: "left: 0px;"}
              .owl-item.active
                .owl-item-inner
                  =image_tag("https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_1.jpg?1539045823", style: "opacity: 1;",class: "owl-lazy")
          .owl-dots
            .owl-dot.active
              %span
              .owl-dot-inner
                =image_tag("https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_1.jpg?1539045823")
            .owl-dot
              %span
              .owl-dot-inner
                =image_tag ("https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_2.jpg?1539045823")
            .owl-dot
              %span
              .owl-dot-inner
                =image_tag("https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_3.jpg?1539045823",class: "is-higher-width")
            .owl-dot
              %span
              .owl-dot-inner
                =image_tag("https://static-mercari-jp-imgtr2.akamaized.net/item/detail/orig/photos/m70068440240_4.jpg?1539045823",class: "is-higher-width")
      .item-price-box.text-center.visible-sp
        %span.item-price.bold ¥ 3,380
        %span.item-tax (税込)
        %span.item-shipping-fee 送料込み
      %section.visible-sp
        = link_to "購入画面に進む",purchase_items_path(@item),class: "item-buy-btn f18-24"
      %table.item-detail-table
